{
  "name": "spi-virtual-community",
  "version": "1.0.0",
  "description": "A global virtual community for LGBTQIA+ refugees and asylum seekers to safely connect",
  "main": "server.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "dev-server": "nodemon",
    "dev-client": "cd src/client && npm run dev",
    "dev": "concurrently 'npm run dev-server' 'npm run dev-client'",
    "build-server": "tsc && tsc-alias",
    "build-client": "cd src/client && npm run build",
    "build": "npm run build-client && npm run build-server",
    "start": "NODE_ENV=production node build/server.js",
    "prepare": "husky install",
    "generate:prisma": "prisma generate --schema=./src/prisma/schema.prisma",
    "migrate:prisma": "prisma migrate dev --schema=./src/prisma/schema.prisma",
    "reset:prisma": "prisma migrate reset --schema=./src/prisma/schema.prisma",
    "studio:prisma": "prisma studio --schema=./src/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "Safeplace International",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "body-parser": "^1.20.2",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "helmet": "^6.0.1",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "^3.18.0",
    "@prisma/client": "^4.13.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "bcrypt": "^5.1.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-scalar": "^0.1.0",
    "husky": "^8.0.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.7",
    "prisma": "^4.13.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.4",
    "tsconfig-paths": "^4.1.2",
    "type-graphql": "^2.0.0-beta.1",
    "typedi": "^0.10.0",
    "typegraphql-prisma": "^0.25.0",
    "typescript": "^5.0.2"
  },
  "prisma": {
    "seed": "ts-node --esm ./src/prisma/seed.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node --esm ./src/server.ts",
    "ext": ".ts, .js"
  },
  "type": "module"
}
