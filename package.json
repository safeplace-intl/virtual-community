{
  "name": "spi-virtual-community",
  "version": "1.0.0",
  "description": "A global virtual community for LGBTQIA+ refugees and asylum seekers to safely connect",
  "main": "server.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "dev-server": "nodemon",
    "dev-client": "cd src/client && npm run dev",
    "dev": "concurrently 'npm run dev-server' 'npm run dev-client'",
    "build-server": "tsc && tsc-alias",
    "build-client": "cd src/client && npm run build",
    "build": "npm run build-client && npm run build-server",
    "start": "NODE_ENV=production node build/server.js",
    "prepare": "husky install",
    "generate:prisma": "prisma generate"
  },
  "keywords": [],
  "author": "Safeplace International",
  "license": "MIT",
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.21.3",
    "helmet": "^6.0.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^2.0.0-beta.1",
    "typegraphql-prisma": "^0.24.5"
  },
  "devDependencies": {
    "@prisma/client": "^4.12.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.7",
    "prisma": "^4.12.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.4",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^5.0.2"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "prisma"
    ],
    "exec": "ts-node --esm ./src/server.ts",
    "ext": ".ts, .js"
  },
  "type": "module"
}
